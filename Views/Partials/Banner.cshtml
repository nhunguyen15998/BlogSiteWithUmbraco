@inherits Umbraco.Web.Mvc.UmbracoViewPage<BlogSiteWithUmbraco.Models.SliderItemModel>

<div class="py-0">
    <div class="container">
        <div class="half-post-entry d-block d-lg-flex bg-light">
            <div class="img-bg" style="background-image: url('@Umbraco.TypedMedia(Model.SliderImage).Url')"></div>
            <div class="contents">
                <span class="caption">@Model.FirstLineText</span>
                <h2>
                    <a href="@Umbraco.TypedContent(Model.SliderUrl).Url">@Model.SliderTitle</a>
                </h2>
                <p class="mb-3">@Model.ShortDescription</p>
                <div class="post-meta">
                    <span class="d-block"><a href="#">Dave Rogers</a> in <a href="#">Food</a></span>
                    <span class="date-read">Jun 14 <span class="mx-1">•</span> 3 min read <span class="icon-star2"></span></span>
                </div>
            </div>
        </div>
    </div>
</div>